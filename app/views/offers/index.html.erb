<p id="notice"><%= notice %></p>

<div id="log"><h1>Lista ofert</h1></div>

<table>
  <thead>
    <tr>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.description %></td>
        <td><%= link_to 'Wyświetl', offer %></td>
        <% if offer.user == current_user %>
        <td><%= link_to 'Edytuj', edit_offer_path(offer) %></td>
        <td><%= link_to 'Usuń', offer, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

