<p id="notice"><%= notice %></p>

<div id="log">
  <h1>Lista ofert</h1>
</div>

<%= form_tag(offers_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Szukaj oferty" %>
<%= submit_tag "Szukaj" %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Tytuł oferty</th></ br>
      <th>Obszar działalności</th></ br>
      <th>Nazwa Firmy</th></ br>
      <th>Adres Email</th></ br>
      <th>Telefon</th></ br>
      <th>Adres Firmy</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
  
        <td><%= offer.description %></td>
        <td><%= offer.place %></td>
        <td><%= offer.Nazwa_Firmy %></td>
        <td><%= offer.Email %></td>
        <td><%= offer.Telefon %></td>
        <td><%= offer.Adres %></td>
        <td><%= link_to 'Wyświetl', offer %></td>
        <% if offer.user == current_user %>
        <td><%= link_to 'Edytuj', edit_offer_path(offer) %></td>
        <td><%= link_to 'Usuń', offer, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</br>

<%= link_to 'Nowa oferta', new_offer_path %>


